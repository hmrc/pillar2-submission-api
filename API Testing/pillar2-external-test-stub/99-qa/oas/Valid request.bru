headers {
  Authorization: valid bearerToken
  X-Receipt-Date: 2025-05-01T19:50:48Z
  correlationid: 6e6e8428-6682-482c-a691-ae16cf3df183
  X-Originating-System: MDTP
  X-Transmitting-System: HIP
