script:post-response {
  let authHeader = res.headers.authorization
  let arr = authHeader.split(",")
  let bearer = ""
  if(arr[0].includes("Bearer"))
    bearer = arr[0]
  else
    bearer = arr[1]
  bru.setEnvVar("linkedBearerToken",bearer)
}
