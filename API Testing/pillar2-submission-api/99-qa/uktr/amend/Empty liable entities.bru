      "totalLiability": 5000,
      "totalLiabilityDTT": 5000,
      "totalLiabilityIIR": 0,
      "totalLiabilityUTPR": 0,
      "liableEntities": []
    }
  }
}

tests {
  test("should return 400 for empty liableEntities", function() {
    expect(response.status).to.equal(400);
  });

  test("should return INVALID_JSON error code", function() {
    expect(response.body.code).to.equal("INVALID_JSON");
  });

  test("should return invalid json message", function() {
    expect(response.body.message).to.equal("Invalid JSON payload");
  });
}
