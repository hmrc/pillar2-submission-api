meta {
  name: Submit UKTR - Monetary Validation Error
  type: http
  seq: 1
}

post {
  url: {{submissionsApiBaseUrl}}/uk-tax-return
  body: json
  auth: none
}

headers {
  Accept: application/vnd.hmrc.1.0+json
  Authorization: {{bearerToken}}
  Content-Type: application/json
  x-pillar2-id: XEPLR5555551126
}

body:json {
  {
    "accountingPeriodFrom": "2024-08-14",
    "accountingPeriodTo": "2024-12-14",
    "obligationMTT": true,
    "electionUKGAAP": true,
    "liabilities": {
      "electionDTTSingleMember": false,
      "electionUTPRSingleMember": false,
      "numberSubGroupDTT": 1,
      "numberSubGroupUTPR": 1,
      "totalLiability": -1000.00,
      "totalLiabilityDTT": 5000.999,
      "totalLiabilityIIR": 4000.00,
      "totalLiabilityUTPR": 10000.00,
      "liableEntities": [
        {
          "ukChargeableEntityName": "Newco PLC",
          "idType": "CRN",
          "idValue": "12345678",
          "amountOwedDTT": -5000.00,
          "amountOwedIIR": 3400.999,
          "amountOwedUTPR": 6000.00
        }
      ]
    }
  }
}

tests {
  test("should return 400 Bad Request", function() {
    expect(res.getStatus()).to.equal(400);
  });
  
  test("should return InvalidJson error for monetary validation failures", function() {
    expect(res.body.code).to.equal("001");
    expect(res.body.message).to.equal("Invalid JSON Payload");
  });
}
